{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",

    "outDir": "lib",
    "rootDir": "src",
    "declaration": true,

    "strict": true,

    "esModuleInterop": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "test",
    "lib"
  ]
}
