{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",

    "removeComments": true,
    "outDir": "lib",
    "rootDir": "src",
    ////"declaration": true,
    //! don't set declaration to true
    //! readon: it will remove the JSDoc comments

    "strict": true,

    "esModuleInterop": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "test",
    "lib/typings"
  ]
}
